generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Teacher {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  test      Test[]
  status    Status   @default(Teacher)
}

model Student {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  status    Status   @default(Student)

  score studentScore[]
}

model studentScore {
  id        String   @id @default(cuid())
  studentId String
  testId    String
  score     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  student Student @relation(fields: [studentId], references: [id])
  test    Test    @relation(fields: [testId], references: [id])
}

model Test {
  id           String         @id @default(cuid())
  title        String
  task         Task[]
  timeLimit    Int
  startTime    DateTime
  endTime      DateTime
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  studentScore studentScore[]
  teacherId    String
  teacher      Teacher        @relation(fields: [teacherId], references: [id])
  status       TestStatus     @default(PENDING)
}

model Task {
  id          String   @id @default(cuid())
  title       String
  description String
  testId      String
  image       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  test Test @relation(fields: [testId], references: [id])
}

enum Status {
  Teacher
  Student
}

enum TestStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
}
